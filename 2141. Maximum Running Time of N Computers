class Solution {
public:
    long long maxRunTime(int n, vector<int>& a) {

        long long sum = reduce(a.begin(), a.end(), 0LL);
        long long l = *min_element(a.begin(), a.end()), r = sum / n, ans = 0;

        while (l <= r) {
            long long int m = l + (r - l) / 2;
            long long int h = 0;

            for (auto x : a)
                h += min((long long)x, m);

            if (h >= m * n) {
                ans = m;
                l = m + 1;
            } else
                r = m - 1;
        }
        return ans;
    }
};
