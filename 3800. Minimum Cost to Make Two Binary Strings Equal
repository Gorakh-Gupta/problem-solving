class Solution {
public:
    long long minimumCost(string s, string t, int flipCost, int swapCost,
                          int crossCost) {
        long long a = 0, b = 0;
        for (int i = 0; i < s.size(); i++) {
            if (s[i] == '0' && t[i] == '1')
                a++;
            else if (s[i] == '1' && t[i] == '0')
                b++;
        }
        cout << a << " " << b;
        long long p = min(a, b);
        long long ans = p * min(swapCost, 2 * flipCost);
        a = a - p;
        b = b - p;
        long long j = abs(a - b);
        ans += j/2 * min(crossCost + swapCost, 2 * flipCost);
        if (j % 2 == 1) 
            ans += flipCost;
        return ans;
    }
};
