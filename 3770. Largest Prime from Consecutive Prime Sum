class Solution {
private:
    bool isPrime(int n) {
    if(n % 2 == 0) return false;
    for(int i = 3; i*i <= n; i += 2) {
        if(n % i == 0) return false;
    }
    return true;
}
public:
    int largestPrime(int n) {
        if(n == 1) return 0;
        int ans = 2, m = 3, sum = 2, i = 0;
        while(sum + m <= n) {
            if(isPrime(m)) {
                sum += m;
                if(isPrime(sum)) ans = sum;
            }
            m += 2;
        }
        return ans;
    }
};
