class Solution {
public:
    int numberOfWays(string a) {
        vector<int> l;
        int plant = 0;
        int seat = 0;
        int n = a.size();
        int i = 0;
        long int md = 1e9 + 7;
        while (i < n && a[i] == 'P')
            i++;
        int j = n - 1;
        while (j >= i && a[j] == 'P')
            j--;
        for (int k = i; k <= j; k++) {
            if (a[k] == 'S') {
                if (seat == 2) {
                    l.push_back(plant + 1);
                    plant = 0;
                    seat = 1;
                } else
                    seat++;
            } else {
                if (seat == 2) {
                    plant++;
                }
            }
        }
        // cout<<seat<<" "<<plant<<" "<<l.size()<<endl;
        if(seat%2==1)return 0;
        if (l.size() == 0) {
            if (seat % 2 == 0 and seat>0)
                return 1;
            else
                return 0;
        }
        long res = 1;
        for (auto x : l) {
            res *= x;
            res %= md;
        }
        cout << res;
        return res % md;
    }
};
