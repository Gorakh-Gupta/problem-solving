    }}
    
 void solve(){
    ll n,m,k;
    cin >>n>>k;
    if((k<n and 2*k>n+1) or n<k)cout<<"NO";
    
    else cout<<"YES"<<endl<<2<<endl<<n-k+1<<" "<<1;
                  
 }
