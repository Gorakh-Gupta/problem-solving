class Solution {
    public int[] constructTransformedArray(int[] nums) {
        int len = nums.length;
        int[] ans = new int[len];
        for (int i = 0; i < len; i++) {
            if (nums[i] > 0) {
                ans[i] = nums[(i + nums[i]) % len];

            } else if (nums[i] < 0) {
                int j = Math.abs(nums[i]);
                j%=len;
                int k = i-j;
                ans[i] = nums[(len + k)%len];
            } else
                ans[i] = 0;
            // nums[i] = ans[i];
        }
        return ans;
    }
}
