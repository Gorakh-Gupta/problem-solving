class Solution {
public:
    int maximalRectangle(vector<vector<char>>& matrix) {

        int N = matrix.size();
        int M = matrix[0].size();
        vector<int> heights(M, 0);
        int ans = 0;
        
        for (int k = 0; k < N; k++) {
            for (int y = 0; y < M; y++) {
                if (matrix[k][y] == '0')
                    heights[y] = 0;
                else
                    heights[y] += 1;
            }

            int n = heights.size();
            int max_area = 0;
            stack<pair<int, int>> s;
            for (int i = 0; i < n; i++) {
                int start = i;
                while (!s.empty() and s.top().second > heights[i]) {
                    int index = s.top().first;
                    int height = s.top().second;
                    s.pop();
                    max_area = max(max_area, (i - index) * height);
                    start = index;
                }
                s.push({start, heights[i]});
            }
            while (!s.empty()) {
                max_area = max(max_area, s.top().second * (n - s.top().first));
                s.pop();
            }
            ans = max(ans, max_area);
        }

        return ans;
    }
};
