class Solution {
public:
    vector<int> findCoins(vector<int>& numWays) {
        int N = numWays.size();
        vector<long long> dp(N + 1, 0);
        vector<int> coins;

        dp[0] = 1;

        for (int i = 1; i <=N; i++) {
            if (dp[i] > numWays[i-1]) {
                return {}; // impossible
            }

            if (dp[i] < numWays[i-1]) {
                // coin i must exist
                coins.push_back(i);

                for (int j = i; j <= N; j++) {
                    dp[j] += dp[j - i];
                }

                if (dp[i] != numWays[i-1]) {
                    return {}; // still mismatch â†’ invalid
                }
            }
        }
        return coins;
    }
};
